@model OrangeBricks.Web.Controllers.Property.ViewModels.BookViewingViewModel
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Book Viewing";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Book a viewing</h2>

<p>What time would you like to view the property on @Model.Property.StreetName ?</p>

@using (Html.BeginForm("BookViewing", "Property", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        @Html.LabelFor(m => m.ViewingTime, "Viewing Time", new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.Hidden("PropertyId", Model.Property.Id)
            @Html.Hidden("UserId", User.Identity.GetUserId())
            @Html.TextBoxFor(m => m.ViewingTime, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Book Viewing" />
        </div>
    </div>
}