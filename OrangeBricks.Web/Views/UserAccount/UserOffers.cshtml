@model OrangeBricks.Web.Controllers.UserAccount.ViewModels.UserWithOffersViewModel

@{
    ViewBag.Title = "Offers you have made";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewBag.Title</h2>
<p>Hello @Model.UserName!</p>
<p>Here you can see the offers that you have made on various properties</p>
@if (Model.HasOffers)
{
    <p>You have made @Model.Offers.Count() offers so far.</p>
    <p>@Model.OffersAccepted Have been accepted.</p>
    <p>@Model.OffersPending Are pending.</p>
    <p>@Model.OffersRejected Have been rejected.</p>

    foreach (var offer in Model.Offers)
    {
        <hr />
        <div>
            <p><strong>Offer Amount: </strong> £@offer.Amount</p>
            <p><strong>Offer Made At: </strong> @offer.CreatedAt.ToLongTimeString() on @offer.CreatedAt.ToShortDateString()</p>
            <p><strong>Status: </strong> @offer.Status</p>
        </div>
    }
}
else
{
    <div class="alert alert-info" role="alert">
        You have not made any offers yet
    </div>
}
